<h2 class='User_Header'>New <%=@current_user.username%> Draft Pick <h2>


<%= form_for :draft, url: drafts_path do |f| %>

  <%= f.hidden_field :player, :value => @current_user.username %> 


  <p>
    <%= f.label "Round" %><br>
    <%= f.select :round, [['1', '1'],['2','2'],['3','3'],['4','4'],['Winner Pick','5']] %>
  </p>  

  <p>
    <%= f.label "Bachelor" %><br>
    <%= f.select :bachelor, [['Jordan'],['Luke'],['Wells'],['James T.'],['Grant'],['Derek'],['Christian'],['Chad'],['Chase'],['Alex'],['Robby'],['Brandon'],['James F.'],['Ali'],['Nick B.'],['Will'],['James S.'],['Vinny'],['Evan'],['Daniel']] %>
  </p>
 
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>