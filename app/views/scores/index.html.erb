<h1>Scores</h1>
 
<table class="table">
  <tr>
    <th>Name</th>
    <th>Total</th>   
    <th>Week2</th>   
    <th>Week3</th>   
    <th>Week4</th>   
    <th>Week5</th>   
    <th>Week6</th>   
    <th>Week7</th>   
    <th>Week8</th>   
    <th>Week9</th>   
    <th>Week10</th> 
    <th>Winner Pick</th>     
  </tr>
 
  <% @scores.each do |score| %>
    <tr>
      <td><%= score.player_name %></td>
      <td><%= score.total %></td>
      <td><%= score.week_2 %></td>
      <td><%= score.week_3 %></td>
      <td><%= score.week_4 %></td>
      <td><%= score.week_5 %></td>
      <td><%= score.week_6 %></td>
      <td><%= score.week_7 %></td>
      <td><%= score.week_8 %></td>
      <td><%= score.week_9 %></td>
      <td><%= score.week_10 %></td>
      <td><%= score.correct_final_pick %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', controller: 'welcome' %>