<%= form_for :signup, url: signups_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :confirm_password %><br>
    <%= f.password_field :confirm_password %>
  </p>

  <p>
    <%= f.submit "Sign Up" %>
  </p>
<% end %>